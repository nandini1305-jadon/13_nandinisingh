import java.util.Scanner;

public class CountEven {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int even = 0;

        for (int i = 1; i <= 5; i++) {
            System.out.print("Enter number " + i + ": ");
            int num = sc.nextInt();
            if (num % 2 == 0)
                even++;
        }

        System.out.println("Count of even numbers: " + even);
    }
}
