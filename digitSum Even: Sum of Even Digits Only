import java.util.Scanner;

public class SumEvenDigits {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter number: ");
        int num = sc.nextInt();

        int sum = 0;
        while (num != 0) {
            int d = num % 10;
            if (d % 2 == 0) sum += d;
            num /= 10;
        }

        System.out.println("Sum of even digits: " + sum);
    }
}
